<%- include("partials/_header") %>

<style>

  .custom-card {
    background-color: #343a40; 
    border-radius: 8px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
  }

  .custom-card .form-control {
    background-color: #495057; 
    border: 1px solid #6c757d; 
    color: #fff; 
  }

  .custom-card .form-control::placeholder {
    color: #adb5bd; 
  }

  .custom-card .btn-primary {
    width: 100%; 
    background-color: #007bff;
    border-color: #007bff; 
  }
</style>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card custom-card">
        <div class="card-body">
          <form action="/update/<%= car.placa %>" method="POST">
            <input
              type="text"
              name="placa"
              value="<%= car.placa %>"
              placeholder="Placa"
              class="form-control mb-3"
              autofocus
            />
            <input
              type="text"
              name="marca"
              value="<%= car.marca %>"
              placeholder="Marca"
              class="form-control mb-3"
            />
            <input
              type="text"
              name="modelo"
              value="<%= car.modelo %>"
              placeholder="Modelo"
              class="form-control mb-3"
            />
            <input
              type="text"
              name="color"
              value="<%= car.color %>"
              placeholder="Color"
              class="form-control mb-3"
            />

            <button type="submit" class="btn btn-primary">Guardar Carro</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
